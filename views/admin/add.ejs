<main>
	
	<%- include('../partials/adminsidebar') %>
		
		  <div id="main-wrapper">
		
			<div class="container">
  <div class="bg-white shadow-sm p-3 d-flex justify-content-between flex-wrap nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
    <h5 class="m-0 color-theme d-inline-block">Admin Manager</h5>
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>

  <div class="col py-2">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/manager">Admin Manager</a></li>
            <li class="breadcrumb-item active">New Admin</li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <b>UserId</b>
      </div>
    </div>
  </div>

  <% if(typeof errors != 'undefined') { %>
    <% errors.forEach(function(error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error.msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% }); %>
  <% } %>

  <form action="/admin/add" method="POST">
    <div class="row form-group mb-3">
      <div class="col">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>" placeholder="Name">
      </div>
      <div class="col">
        <label for="email">Email</label>
        <input type="text" class="form-control" id="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" placeholder="Email">
      </div>
    </div>

    <div class="row form-group mb-3">
      <div class="col">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          placeholder="Create Password"
          value="<%= typeof password != 'undefined' ? password : '' %>"
          required
        />
      </div>
      <div class="col">
        <label for="password2">Confirm Password</label>
        <input
          type="password"
          id="password2"
          name="password2"
          class="form-control"
          placeholder="Confirm Password"
          value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
        />
      </div>
    </div>

    <div class="row form-group mb-3">
      <div class="col">
        <label for="contact">Contact</label>
        <input type="text" class="form-control" id="contact" name="contact" value="<%= typeof contact != 'undefined' ? contact : '' %>" placeholder="Contact">
      </div>
    </div>

    <div class="form-group mb-4">
      <label for="address">Address</label>
      <textarea class="form-control" name="address" id="address" cols="30" rows="2" placeholder="Address"><%= typeof address != 'undefined' ? address : '' %></textarea>
    </div>

    <div class="form-group mb-4">
      <button type="submit" class="btn btn-primary">Add Admin</button>
    </div>
  </form>
</div>
</div>

    
</main>