<main>
    <%- include('../partials/adminsidebar') %>
    <div id="main-wrapper">
      <div class="bg-white shadow-sm p-2 d-flex justify-content-between flex-wrap nowrap align-items-center pt-0 pb-2 mb-3 border-bottom">
        <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
        <h5 class="m-0 color-theme d-inline-block">Admin</h5>
        <div class="btn-toolbar mb-2 mb-md 0">
          <div class="btn-group me-2">
            <a href="/admin/add" class="btn btn-sm btn-outline-secondary">+ New admin</a>
          </div>
        </div>
      </div>
  
      <!-- Display the list of admin users in a table -->
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Contact</th>
              <th scope="col">Email</th>
              <th scope="col">Address</th>
              <th scope="col" class="text-end">Action</th>
            </tr>
          </thead>
          <tbody>
            <% adminUsers.forEach(admin => { %>
              <tr class="align-middle">
                <td><%= admin.name %></td>
                <td><%= admin.contact %></td>
                <td><%= admin.email %></td>
                <td><%= admin.address %></td>
                <td class="text-end">
                  <div class="d-flex flex-row justify-content-end gap-2">
                    <!-- View Button -->
                    <a href="/admin/view/<%= admin._id %>" type="button" class="btn btn-primary btn-small">
                      <i class="bi bi-eye bi-sm"></i> <!-- Add the bi-sm class for smaller size -->
                    </a>
                    <!-- Edit Button -->
                    <a href="/admin/edit/<%= admin._id %>" type="button" class="btn btn-warning btn-small">
                      <i class="bi bi-pencil bi-sm"></i> <!-- Add the bi-sm class for smaller size -->
                    </a>
                    <form action="/admin/delete/<%= admin._id %>?_method=DELETE" method="POST" class="position-relative" onsubmit="return confirmDelete();">
                      <button type="submit" class="btn btn-danger btn-small">
                        <i class="bi bi-person-x"></i>
                      </button>
                    </form>
                    <script>
                      function confirmDelete() {
                        // Display a confirmation dialog to the user
                        const confirmed = confirm('Are you sure you want to delete <%= admin.name %> record?');
                    
                        // If the user confirms, submit the form; otherwise, do nothing
                        return confirmed;
                      }
                    </script>
                                        
                   

                    
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </main>
  