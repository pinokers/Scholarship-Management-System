<main>
	<%- include('../partials/applicantsidebar') %>
	
	<div id="main-wrapper">
		
		<div class="bg-white shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block"></i>Profile</h5>
		</div>
		
		<form action="/applicant/profile?_method=PUT" method="POST" class="w-75 border ms-3 my-3 p-4 bg-white rounded-2 shadow" style="min-width: 400px;">
			
			<div class="row">
				<div class="col-sm-6 mb-4">
					<label for="first-name" class="form-label">Name</label>
					<input type="text" name="user[name]" class="form-control" id="first-name" placeholder="Enter first name.." value="<%= currentUser.name %>" required>
				</div>
				
			<div class="mb-4">
				<label for="email" class="form-label">Email</label>
				<input type="email" id="email" class="form-control" value="<%= currentUser.email %>" disabled>
			</div>
			<div class="mb-4">
				<label for="address" class="form-label">Course</label>
				<input type="text" name="user[course]" class="form-control" id="address" placeholder="Enter address.." value="<%= currentUser.course %>">
			</div>
			
			<div class="mb-4">
				<label for="phone" class="form-label">Phone</label>
				<input type="number" name="user[contact]" class="form-control" id="phone" placeholder="Enter phone.." value="<%= currentUser.contact %>">
			</div>
			<div class="mb-4">
				<label for="address" class="form-label">school ID</label>
				<input type="text" name="user[schoolID]" class="form-control" id="address" placeholder="Enter address.." value="<%= currentUser.schoolID %>">
			</div>
			<div class="mb-4">
				<label for="address" class="form-label">School Name</label>
				<input type="text" name="user[schoolName]" class="form-control" id="address" placeholder="Enter address.." value="<%= currentUser.schoolName %>">
			</div>
			<div class="mb-4">
				<label for="address" class="form-label">School Address</label>
				<input type="text" name="user[schoolAddress]" class="form-control" id="address" placeholder="Enter address.." value="<%= currentUser.schoolAddress %>">
			</div>
			
			
			<button type="submit" class="btn w-75 d-block m-auto mt-4">Update</button>
		</form>
		
		
		
	</div>
</main>