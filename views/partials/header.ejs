									<a class="dropdown-item" href="/auth/adminlogout"><i class="fas fa-sign-out-alt"></i> Logout</a>
								</div>
							</div>
						<% } else if(currentUser.role === 'staffview') { %>
							<!-- Admin dropdown menu -->
