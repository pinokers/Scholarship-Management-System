<div class="requirements-container">
    <div class="free-wall container-sm" id="freedomwall">
        <div class="freedom-wall-header">
            <h1 class="home-page-requirements-header-title">Freedom Wall</h1>
        </div>

        <div class="container mt-4">
            <div class="row">
                <!-- Right side: Display created content -->
                <div class="col-md-12 ">
                    <div class="border border-success rounded p-3">
                        <!-- Display posts here -->
                        <div class="comment-content medium">
                            <% for (let i = 0; i < posts.length; i += 2) { %>
                                <div class="row">
                                    <% for (let j = i; j < i + 2 && j < posts.length; j++) { %>
                                        <div class="col-md-6">
                                            <div class="post" id="post<%= j %>" onclick="toggleButton('collapseButton<%= j %>')">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div class="comment-text">
                                                        <% if (posts[j].createdBy && posts[j].createdByModel === 'User') { %>
                                                            <strong><%= posts[j].createdBy.first_name %> <%= posts[j].createdBy.last_name %>: </strong>
                                                        <% } else if (posts[j].createdByModel === 'Admin') { %>
                                                            <strong>Admin: </strong>
                                                        <% } %>
                                                        <%= posts[j].content %>
                                                    </div>   
                                                    <% if (currentUser && posts[j].createdBy && currentUser._id.toString() === posts[j].createdBy._id.toString() || (currentUser && currentUser.role === 'staff') || (currentUser && currentUser.role === 'adminmanager')) { %>
                                                        <form action="/home/post-delete/<%= posts[j]._id %>?_method=DELETE" method="POST">
                                                            <input type="hidden" name="_method" value="DELETE">
                                                            <button class="btn btn-sm btn-outline-danger collapse-button" id="collapseButton<%= j %>" style="display: none;" type="submit">Delete</button>
                                                        </form>
                                                    <% } %>
                                                </div>
                                                <p class="mt-0">
                                                    <em>
                                                        <% 
                                                            function getTimeElapsed(createdAt) {
                                                                const createdDate = new Date(createdAt);
                                                                const currentDate = new Date();
                                                                const elapsedTimeInSeconds = Math.floor((currentDate - createdDate) / 1000);
                                                                if (elapsedTimeInSeconds < 60) {
                                                                    return `${elapsedTimeInSeconds} second${elapsedTimeInSeconds !== 1 ? 's' : ''} ago`;
                                                                } else if (elapsedTimeInSeconds < 3600) {
                                                                    const minutes = Math.floor(elapsedTimeInSeconds / 60);
                                                                    return `${minutes} minute${minutes !== 1 ? 's' : ''} ago`;
                                                                } else if (elapsedTimeInSeconds < 86400) {
                                                                    const hours = Math.floor(elapsedTimeInSeconds / 3600);
                                                                    return `${hours} hour${hours !== 1 ? 's' : ''} ago`;
                                                                } else {
                                                                    const days = Math.floor(elapsedTimeInSeconds / 86400);
                                                                    return `${days} day${days !== 1 ? 's' : ''} ago`;
                                                                }
                                                            }
                                                        %>
                                                        <%= getTimeElapsed(posts[j].createdAt) %>
                                                    </em>
                                                </p>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                            <% } %>
                            
                        </div>

                        <!-- Centered form for creating content -->
                       
                        
                        <script>
                            document.getElementById('content').addEventListener('input', function() {
                                var input = this.value;
                                var warningMessage = document.getElementById('warningMessage');
                                
                                if (input.length >= 45) {
                                    this.value = input.substring(0, 45); // Truncate input to 45 characters
                                    warningMessage.style.display = 'block';
                                } else {
                                    warningMessage.style.display = 'none';
                                }
                            });
                        </script>
                        
                        
                        
                    </div>
                    <div class="freedomwall-type-area">
                    <form action="/posts" method="post">
                        <div class="input-group mb-1">
                            <input type="text" class="form-control" id="content" name="content" placeholder="Enter comment" aria-label="Enter comment" aria-describedby="basic-addon2" maxlength="45">
                            <div class="input-group-append">
                                <button class="btn btn-outline-success" type="submit"><i class="bi bi-arrow-right"></i></button>
                            </div>
                        </div>
                        <span id="warningMessage" style="color: red; display: none;">Comment limit reached (45 characters)</span>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleButton(buttonId) {
    var button = document.getElementById(buttonId);
    if (button.style.display === 'none') {
        button.style.display = 'block';
    } else {
        button.style.display = 'none';
    }
}

</script>










 



